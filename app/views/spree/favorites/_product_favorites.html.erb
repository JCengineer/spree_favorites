<h3><%= Spree.t(:my_favorites) %></h3>
<% if @favorites.present? %>
  
  <% f_products = @favorites.map{|f| f.favorable }[0..2] %>
  <%= render :partial => 'spree/shared/products', :locals => { :products => f_products } %>

<% else %>
  <p><%= Spree.t(:you_have_no_favorites_yet) %></p>
<% end %>
<%= link_to 'Browse your nu wardrobe', favorites_path %>