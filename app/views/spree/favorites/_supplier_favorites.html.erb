<div class="row">
	<div class="col-md-3 col-sm-4">
		<h3><%= Spree.t(:my_favorite_suppliers) %>:</h3>
		<%= link_to 'Browse your nu wardrobe', favorites_path %>
	</div>
	<div class="col-md-9 col-sm-8 pull-right">  
		<% if @favorites.present? %>
		  <% f_suppliers = @favorites.reject{|f| f.favorable_type != 'Spree::Supplier'}.sort_by(&:created_at).map{|f| f.favorable }[0..2] %>
		  <%= render :partial => 'spree/suppliers/supplier', :collection => f_suppliers %>
			<%= link_to 'Browse your nu wardrobe', favorites_path %>
		<% else %>
		  <p><%= Spree.t(:you_have_no_favorites_yet) %></p>
		<% end %>
	</div>
</div>