
<% if has_favorite?(@supplier) %>
  <%= link_to Spree.t(:remove_favorite), favorite_path(get_favorite(@supplier), favorable_id: @supplier.id, favorable_type: 'Spree::Supplier'), method: :delete, remote: true, id: "favorable_supplier_#{@supplier.id}" %>
<% else %>
  <%= link_to Spree.t(:add_favorite), favorites_path(favorable_id: @supplier.id, favorable_type: 'Spree::Supplier'), method: :post, remote: true, id: "favorable_supplier_#{@supplier.id}" %>
<% end %>
