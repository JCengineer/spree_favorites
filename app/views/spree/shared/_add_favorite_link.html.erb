<p class="favorite-links">
	<% if has_favorite?(@product) %>
	
		<%= link_to Spree.t(:remove_favorite), favorite_path(get_favorite(@product), favorable_id: @product.id, favorable_type: 'Spree::Product'), method: :delete, remote: true, id: "favorable_product_#{@product.id}" %>
	
	<% else %>

		<%= link_to favorites_path(favorable_id: @product.id, favorable_type: 'Spree::Product'), method: :post, remote: true, id: "favorable_product_#{@product.id}" do %>
			<%= Spree.t(:add_favorite) %>:
		  <button class="btn btn-success" style="margin-left: 10px;">&nbsp;&nbsp;<i class="glyphicon glyphicon-star"></i>&nbsp;&nbsp;</button>
		<% end %>
	
	<% end %>
</p>
<% favorites = @product.favorites.count %>
<% if favorites > 0 %>
	<p>Starred <% favorites %> times!</p>
<% end %>